<!DOCTYPE html>
<html>
  	<head>
    	<title>Sign In</title>
	</head>
	
	<body>
		

		<p>Sign In</p>
		<%= form_for @customer, :as => :customer, :url => sign_in_path(@customer) do |f| %>
		  <p>
		    <%= f.label 'Email id:' %><br />
		    <%= f.text_field :emailid %>
		  </p>
		  <p>
		    <%= f.label 'Password:' %><br />
		    <%= f.password_field :password %>
		  </p>
		  <p>
		    <%= f.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
		    <%= f.submit 'Clear Form', :type => 'reset' %>
		  </p>
		<% end %>
	</body>
</html>
